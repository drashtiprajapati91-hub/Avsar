<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/packageImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/packageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageImage"
            android:layout_marginTop="8dp"
            android:text="Package Title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/packageDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageTitle"
            android:layout_marginTop="4dp"
            android:text="Short description of package"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/packageCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageDescription"
            android:layout_marginTop="4dp"
            android:text="â‚¹50,000"
            android:textColor="#444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/packageDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/packageCost"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="8dp"
            android:text="2 days"
            android:textColor="#444444"
            android:textSize="13sp" />

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/packageDuration"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/buttonEnquiry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Send enquiry"
                android:background="@drawable/button_outline_red"
                android:textColor="#E91E63" />

            <Button
                android:id="@+id/buttonContact"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="View contact"
                android:layout_marginStart="8dp"
                android:backgroundTint="#80004D"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
