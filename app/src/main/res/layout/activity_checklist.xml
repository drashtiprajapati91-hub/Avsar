<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button -->
        <TextView
            android:id="@+id/textBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checklist"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- Checklist Items -->
        <CheckBox android:id="@+id/checkVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Book venue" />

        <CheckBox android:id="@+id/checkCaterer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Book caterer" />

        <CheckBox android:id="@+id/checkPhotographer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Book Photographer" />

        <CheckBox android:id="@+id/checkMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Decide to food menu" />

        <CheckBox android:id="@+id/checkDecoration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Book Decoration" />

        <CheckBox android:id="@+id/checkInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Send invitation" />

        <CheckBox android:id="@+id/checkMakeup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Call makeup artist" />

        <CheckBox android:id="@+id/checkBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Check budget" />

        <CheckBox android:id="@+id/checkCake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Order Cake" />

        <!-- Add List Button -->
        <Button
            android:id="@+id/buttonAddList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add list"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginTop="150dp" />
    </LinearLayout>
</ScrollView>
